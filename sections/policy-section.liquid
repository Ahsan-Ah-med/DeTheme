{{ 'section.css' | asset_url | stylesheet_tag }}
{%- liquid
  assign sid = section.id
  assign se_stts = section.settings
  assign se_blocks = section.blocks
  assign stt_layout = se_stts.layout
  assign stt_image_bg = se_stts.image_bg
  if se_stts.layout == 'sr4-cus-width'
    assign html_layout = '<div class="sr4-container" style="--width:010693px">__</div>' | split: '__'
  elsif stt_layout == 'sr4-se-container'
    assign html_layout = '<div class="sr4-container">__</div></div>' | split: '__'
  elsif stt_layout == 'sr4-container-wrap'
    assign html_layout = '<div class="sr4-container">__</div>' | split: '__'
  else
    assign html_layout = '__' | split: '__'
  endif
  assign index = 0
  assign index2 = 1
  assign arr_item = section.blocks | where: 'type', 'bl_col'

  assign sr4_se_class = 'sr4_nt_se_' | append: sid
  if se_stts.use_cus_css and se_stts.code_cus_css != blank
    render 'se_cus_css', code_cus_css: se_stts.code_cus_css, sr4_se_class: sr4_se_class
  endif
-%}
<div
  id="sid--{{ sid }}"
  class="sr4-section-inner sr4_nt_se_{{sid}} sr4_se_{{sid}} {{stt_layout}} {% if stt_image_bg != blank and stt_layout != 'sr4-se-container' %} sr4-has-imgbg lazyloadsr4 {% endif %} "
  {% if stt_image_bg != blank and stt_layout != 'sr4-se-container' %}
    data-bgset="{{ stt_image_bg | image_url: width: 1 }}" data-sizes="auto" data-optimumx="2"
  {% endif %}
  {% render 'section_style', se_stts: se_stts %}
>
  {{- html_layout[0] | replace: '010693', se_stts.custom_width -}}
  {%- if stt_layout == 'sr4-se-container' -%}
    <div
      class="sr4-container-inner {% if stt_image_bg != blank %} sr4-has-imgbg lazyloadsr4 {% endif %} "
      {%- if stt_image_bg != blank -%}
        data-bgset="{{ stt_image_bg | image_url: width: 1 }}" data-sizes="auto" data-optimumx="2"
      {%- endif -%}
    >
  {%- endif -%}
  <div class="sr4-link-page-content-style-{{se_stts.accor_des}} sr4-container">
    {%- render 'section_tophead', se_stts: se_stts -%}
    <div class="sr4-row sr4-gx-md-{{se_stts.space_h_item}} {{se_stts.space_h_item}} sr4-gy-md-{{se_stts.space_v_item}} sr4-gx-{{se_stts.space_h_item_mb}} sr4-gy-{{se_stts.space_v_item_mb}}">
      {%- for block in arr_item offset: index -%}
        {%- assign bk_stts = block.settings -%}
        {%- assign index = index | plus: 1 -%}
        {%- assign pd_item = bk_stts.padding_inner | remove: ' ' | split: ',' -%}
        {%- assign pd_item_tb = bk_stts.padding_inner_tb | remove: ' ' | split: ',' -%}
        {%- assign pd_item_mb = bk_stts.padding_inner_mb | remove: ' ' | split: ',' -%}
        <div class="sr4-custom-col sr4-col-item sr4-col-lg-{{bk_stts.col_dk}} sr4-col-md-{{bk_stts.col_tb}} sr4-col-{{bk_stts.col_mb}} bl-{{block.id}}">
          <div
            class="sr4-col-inner sr4-ver-center-{{bk_stts.align_vertical}} sr4-text-lg-{{bk_stts.content_align}} sr4-text-md-{{bk_stts.content_align_tablet}} sr4-text-{{bk_stts.content_align_mobile}} {% if bk_stts.bg_image != blank -%}  lazyloadsr4 sr4-has-imgbg {%- endif -%}"
            {%- if bk_stts.bg_image != blank -%}
              data-bgset="{{ bk_stts.bg_image | image_url: width: 1 }}" data-sizes="auto" data-optimumx="2"
            {%- endif -%}
            style="--bg-cl:{{bk_stts.bg_cl}};--pd: {{pd_item[0] | default: 0}} {{pd_item[1] | default: 0}} {{pd_item[2] | default: 0}} {{pd_item[3] | default: 0}};--pd-tb: {{pd_item_tb[0] | default: 0}} {{pd_item_tb[1] | default: 0}} {{pd_item_tb[2] | default: 0}} {{pd_item_tb[3] | default: 0}};--pd-mb: {{pd_item_mb[0] | default: 0}} {{pd_item_mb[1] | default: 0}} {{pd_item_mb[2] | default: 0}} {{pd_item_mb[3] | default: 0}};"
          >
            <div class="sr4-w-100">
              {%- for block in se_blocks offset: index2 -%}
                {%- assign index2 = index2 | plus: 1 -%}
                {%- assign bk_stts = block.settings -%}
                {%- if block.type != 'bl_col' -%} {%- else -%}{%- break -%}{%- endif -%}
                {%- case block.type -%}
                  {%- when 'html' -%}
                    {% if bk_stts.html_content != blank %}
                      {%- assign general_block = true -%}
                      <div
                        class=" sr4-raw-html sr4-rte--list sr4-hidden-mobile-{{bk_stts.hidden_mobile}}"
                        id="b_{{block.id}}"
                        {%- render 'bk_cus_style', type: 'html', bk_stts: bk_stts, ani_delay: ani_delay -%}
                      >
                        {{ bk_stts.html_content }}
                      </div>
                    {% endif %}
                  {%- when 'links' -%}
                    <div
                      style="--linkSize:{{ bk_stts.font_size_dk }}px;--linkSizeMb:{{ bk_stts.font_size_mb }}px;--linkWeight:{{ bk_stts.font_weight_dk }};--llh:{% if bk_stts.line_height_dk > 0 %}{{ bk_stts.line_height_dk }}px{% else %}1{% endif %};--llhmb:{% if bk_stts.line_height_mb > 0 %}{{ bk_stts.line_height_mb }}px{% else %}1{% endif %};--ls:{{ bk_stts.letter_spacing_dk }}px;--lsmb:{{ bk_stts.letter_spacing_mb }}px;--fc:{{ bk_stts.font_color }};--fca:{{ bk_stts.font_color_active }};--fch:{{ bk_stts.font_color_hover }};--bc:{{ bk_stts.border_color }}"
                      class=" sr4-raw-links sr4-rte--list sr4-hidden-mobile-{{bk_stts.hidden_mobile}}"
                      id="b_{{block.id}}"
                      {%- render 'bk_cus_style', type: 'links', bk_stts: bk_stts, ani_delay: ani_delay -%}
                    >
                      {% if bk_stts.menu %}
                        <ul class="link_listing">
                          {% for link in bk_stts.menu.links %}
                            <li
                              {% if link.active %}
                                class="active"
                              {% endif %}
                            >
                              <a href="{{ link.url }}">{{ link.title }}</a>
                            </li>
                          {% endfor %}
                        </ul>
                        <select id=list_dropdown onchange="location=this.value;" style="display: none;">
                          {% for link in bk_stts.menu.links %}
                            <option value="{{ link.url }}"
                              {% if link.active %}
                                class="active"
                                selected
                              {% endif %}
                            >
                              <a href="{{ link.url }}">{{ link.title }}</a>
                            </option>
                          {% endfor %}
                        </select>
                      {% endif %}
                    </div>
                  
                  {%- when 'page_content' -%}
                    <div
                      class=" sr4-raw-page-content sr4-rte--list sr4-hidden-mobile-{{bk_stts.hidden_mobile}}"
                      id="b_{{block.id}}"
                      {%- render 'bk_cus_style', type: 'html', bk_stts: bk_stts, ani_delay: ani_delay -%}
                    >
                      {{ page.content }}
                    </div>
                  <style>
                    #b_{{block.id}} h2{
                      font-size: 18px;
                      font-weight: 500;
                      color: #303030;
                    }
                    #b_{{block.id}} a{
                      text-decoration: underline !important;
                      cursor: pointer !important;
                    }
                    #b_{{block.id}} p{
                      font-size: 15px;
                      line-height: 22.56px;
                      margin: 24px 0;
                      color: #303030;
                    }
                    #b_{{block.id}} h3{
                      font-size: 17px;
                      line-height: 22.56px;
                      color: #303030;
                      margin-top: 24px;
                      font-weight: 500;
                    }
                    #b_{{block.id}} h4{
                      font-size: 16px;
                      font-weight: 500;
                    }
                    #b_{{block.id}} li{
                      color: #303030;
                      font-size: 15px;
                    }
                    #b_page_content_8FFhVc h3 + p {
                      margin-top: 0;
                    }
                    @media only screen and (max-width: 767px){
                      #b_{{block.id}} h2{
                        font-size: 17px;
                      }
                      #b_{{block.id}} p{
                        font-size: 15px;
                      }
                      #b_{{block.id}} h3{
                        font-size: 15px;
                      }
                      #b_{{block.id}} li{
                        color: #303030;
                        font-size: 15px;
                      }
                    }
                  </style>
                {%- endcase -%}
              {%- endfor -%}
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
  {{- html_layout[1] -}}
</div>
